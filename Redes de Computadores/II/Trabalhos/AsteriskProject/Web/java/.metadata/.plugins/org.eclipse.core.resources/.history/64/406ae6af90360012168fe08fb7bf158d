		// Local
		if (ramais.isEmpty()) {
			for (int i = 0; i < 3; i++) {
				ramais.add(new SIPRamal("460" + i, "Ramal-SIP <4600>",
						"friend", "4600", "1234", "no", "dynamic", "LOCAL",
						"rfc2833", "2", "no"));
			}
		}
		return ramais;

		// try {
