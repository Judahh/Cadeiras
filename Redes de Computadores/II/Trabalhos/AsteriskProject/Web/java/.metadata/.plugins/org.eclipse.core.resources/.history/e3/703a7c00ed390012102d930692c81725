package redes2;

import java.util.ArrayList;
import java.util.List;

import util.imp.AgentsImp;
import util.interfaces.Agents;

public class AgentFacade {
	private static List<Agent> agents = new ArrayList<Agent>();
	private static Agents agt = new AgentsImp();
	private static boolean fake = true;

	public static List<Agent> getAgents() {
		if (fake) {
			if (agents.isEmpty()) {
				agents.add(new Agent("000008", "123456", "Borne"));
				agents.add(new Agent("000007", "1234", "James Bond"));
			}
			return agents;
		} else {
			List<Agent> toReturn = new ArrayList<Agent>();
			for (int i = 0; i < sip.getNumberOfSessions(); i++) {
				String sessionName = sip.getSessionName(i);
				toReturn.add(new SIPRamal(sessionName, sip.getVariableValue(
						sessionName, "callerid"), sip.getVariableValue(
						sessionName, "type"), sip.getVariableValue(sessionName,
						"username"), sip
						.getVariableValue(sessionName, "secret"), sip
						.getVariableValue(sessionName, "canreinvite"), sip
						.getVariableValue(sessionName, "host"), sip
						.getVariableValue(sessionName, "context"), sip
						.getVariableValue(sessionName, "dtmfmode"), sip
						.getVariableValue(sessionName, "call-limit"), sip
						.getVariableValue(sessionName, "nat")));
			}
			return toReturn;
		}
		return null;
	}

	public static void addAgent(Agent agent) {
		if (fake) {
			getAgents().add(agent);
		} else {

		}
	}

	public static void deleteAgent(String agentId) {
		if (fake) {
			Agent toRemove = null;
			for (Agent agent : getAgents()) {
				if (agent.isSame(agentId)) {
					toRemove = agent;
				}
			}
			if (toRemove != null) {
				getAgents().remove(toRemove);
			}
		} else {
		}
	}

	public static void updateAgent(Agent agent) {
		updateAgent(agent.getId(), agent);
	}

	public static void updateAgent(String agentId, Agent agent) {
		deleteAgent(agentId);
		addAgent(agent);
	}

	public static Agent getAgent(String agentId) {
		if (fake) {
			for (Agent agent : getAgents()) {
				if (agent.isSame(agentId)) {
					return agent;
				}
			}
			return null;
		} else {
		}
		return null;
	}

}